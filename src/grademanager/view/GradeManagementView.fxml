<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grademanager.controller.GradeManagementController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <children>
            <Label text="NHẬP/XEM ĐIỂM">
               <font><Font name="System Bold" size="18.0" /></font>
            </Label>
            
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Chọn Lớp:" />
                  <ComboBox fx:id="classComboBox" onAction="#handleClassSelection" prefWidth="120.0" />
                  <Label text="Chọn Môn:" />
                  <ComboBox fx:id="subjectComboBox" onAction="#handleSubjectSelection" prefWidth="120.0" />
                  <Button fx:id="loadButton" mnemonicParsing="false" onAction="#handleLoadGrades" text="Tải Bảng điểm" />
               </children>
            </HBox>

            <TableView fx:id="gradeTableView" editable="true" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="studentIdColumn" editable="false" prefWidth="60.0" text="Mã HS" />
                <TableColumn fx:id="studentNameColumn" editable="false" prefWidth="180.0" text="Họ và Tên" />
                
                <TableColumn fx:id="assignmentScoreColumn" prefWidth="100.0" text="Đ.Thường Xuyên (1)" />
                
                <TableColumn fx:id="midtermScoreColumn" prefWidth="100.0" text="Giữa kỳ (2)" />
                <TableColumn fx:id="finalScoreColumn" prefWidth="100.0" text="Cuối kỳ (3)" />
              </columns>
               <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveChanges" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Lưu Thay đổi" />
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-border-color: #cccccc; -fx-padding: 10; -fx-border-radius: 5;">
               <children>
                  <Label text="Công cụ tính toán:">
                     <font><Font name="System Bold" size="12.0" /></font>
                  </Label>
                  <Button fx:id="avgButton" mnemonicParsing="false" onAction="#handleCalculateAverage" text="Tính TB Môn" />
                  <Label fx:id="avgLabel" text="Điểm TB: ..." textFill="#2196f3">
                     <font><Font name="System Bold" size="13.0" /></font>
                  </Label>
                  
                  <Label text="|" textFill="#bbbbbb" />
                  
                  <Button fx:id="gpaButton" mnemonicParsing="false" onAction="#handleCalculateGPA" text="Tính GPA Tổng" />
                  <Label fx:id="gpaLabel" text="GPA: ..." textFill="#ff5722">
                     <font><Font name="System Bold" size="13.0" /></font>
                  </Label>
               </children>
            </HBox>

         </children>
      </VBox>
   </children>
</AnchorPane>